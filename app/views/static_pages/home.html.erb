<% provide(:title, 'Home') %>    
  

<div class="center hero-unit">
  <h1>Search Engine</h1>

  <h2>
    This is the home page for the
    <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
    sample application.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  <br>

</div>

<div class ="left hero-unit">
  <h2>Search results:</h2>
  <br>
  <h3>Exact search term:</h3>
  <br>
  <h3>Similar terms to search term:</h3>

  <% @a.length.times do |rowconcept|%>
    <p>
    <h4><%= @a[rowconcept][:concept]%></h4>
    <% @a[rowconcept][:size].times do |url_for_this_concept|%>
       <a href="<%= @a[rowconcept][:urls][url_for_this_concept] %>"><%= @a[rowconcept][:urls][url_for_this_concept] %> </a>
       <%= "-"%>
       <br>
    <% end %>
    </p>
  <% end %>
</div>


<div id="outer" style="position:relative">
<% 0.times do |x| %>
  <% 0.times do |y| %>
    <% block_data = @a[x+12*y] %>
    <% colour = block_data[:colour] %>
      <div style="position:absolute; left: <%=50*x%>px; top: <%=50*y%>px;background-color:<%= colour%>;width:50px;height:50px;border:1px solid #000">aqwertyuiop[]asdfghjkl</div>
    <% end %>
  <% end %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
